                var options = {
                    title: "Кількість тренувань кожного типу",
                    width: 700,
                    height: 500
                };

                var chart = new google.visualization.ColumnChart(document.getElementById('chart2'));
                chart.draw(chartData, options);

            })
        }

    </script>
